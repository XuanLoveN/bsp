@model IList<BSP.Model.User>
@{
    ViewBag.Title = "用户管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div style="height:20px;"></div>
@if (Model != null && Model.Count > 0)
{
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th># 姓名</th>
                <th># 地址</th>
                <th># 联系电话</th>
                <th># 电子邮件</th>
                <th># 操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.Mail</td>
                    <td>
                        <a href="@Url.Action("Edit", new {id=item.Id })" title="编辑"><i class="glyphicon glyphicon-edit text-success"></i></a>
                        <a href="@Url.Action("Remove", new {id=item.Id })" title="删除" onclick="return confirm('是否确认删除？');"><i class="glyphicon glyphicon-remove text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}