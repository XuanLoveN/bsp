@model BSP.ViewModel.RegisterViewModel
@{
    ViewBag.Title = "注册新用户";
}
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading"><i class="glyphicon glyphicon-user"></i> @ViewBag.Title</div>
            <div class="panel-body">
                @using (Html.BeginRouteForm("Default", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.LoginId, new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.LoginId, null, new { @class = "text-danger col-md-3" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LoginPwd, new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.PasswordFor(m => m.LoginPwd, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.LoginPwd, null, new { @class = "text-danger col-md-3" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPwd, new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.PasswordFor(m => m.ConfirmPwd, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmPwd, null, new { @class = "text-danger col-md-3" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger col-md-3" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address, new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger col-md-3" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Phone, new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Phone, null, new { @class = "text-danger col-md-3" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger col-md-3" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-6">
                            @Html.Submit("注册新用户", new { @class = "btn btn-primary btn-block" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}